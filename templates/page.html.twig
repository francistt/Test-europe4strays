{% extends 'base.html.twig' %}

{% block title %}
	{{ page.title }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="jumbotron mt-3">
			<div class="row featurette">
				<div class="col">
					<h2 class="featurette-heading">{{ page.title }}</h2>
					<p class="lead">
						{{ page.content | raw }}
					</p>
					{% if page.btnTitle != null %}
						<p class="lead">
							<a class="btn btn-secondary btn-lg" href="{{ page.btnUrl }}" role="button">{{ page.btnTitle }}</a>
						</p>
					{% endif %}
				</div>
				{% if page.illustration != null %}
					<div class="col-md-5">
						<img src="uploads/{{ page.illustration }}" class="img-fluid" alt="image">
					</div>
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
